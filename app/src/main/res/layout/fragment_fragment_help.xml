<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.upv.olcra.sportfuture.FragmentHelp">

    <ImageView
        android:id="@+id/helpImAitex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/help_frag_content_description"
        android:cropToPadding="true"
        android:src="@drawable/logo_transparente" />

    <TextView
        android:id="@+id/helpTextAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/helpImAitex"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/helpTextAddr"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/helpTextWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/helpTextAddr"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:autoLink="web"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/helpTextWeb"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/helpTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/helpTextWeb"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:autoLink="phone"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/helpTextPhone"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/helpTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/helpTextPhone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:autoLink="email"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/helpTextEmail"
        android:textSize="20sp" />
</RelativeLayout>
